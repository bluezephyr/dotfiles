#
# ~/.bash_profile
#

[[ -f ~/.bashrc ]] && . ~/.bashrc

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Replace cd with zoxide: https://github.com/ajeetdsouza/zoxide
if [ -f "$HOME/.local/bin/zoxide" ] ; then
    eval "$(zoxide init --cmd cd bash)"
fi

export EDITOR=/home/jens/.local/bin/nvim
export OPENER=/home/jens/.local/bin/nvim

. "$HOME/.cargo/env"
